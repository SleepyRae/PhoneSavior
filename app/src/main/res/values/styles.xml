<resources>
    <!--
           Base application theme, dependent on API level. This theme is replaced
           by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
       -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 设置界面的样式 -->
    <style name="set_bg_layout">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/set_shape_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8.0dip</item>
        <item name="android:layout_marginTop">10.0dip</item>
        <item name="android:layout_marginRight">8.0dip</item>
    </style>

    <style name="set_bg_base_layout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">16.0dip</item>
        <item name="android:paddingBottom">16.0dip</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="set_bg_top_layout" parent="@style/set_bg_base_layout">
        <item name="android:background">@drawable/set_bg_top_selector</item>
    </style>

    <style name="set_bg_bottom_layout" parent="@style/set_bg_base_layout">
        <item name="android:background">@drawable/set_bg_bottom_selector</item>
    </style>

    <style name="set_bg_quit_layout" parent="@style/set_bg_base_layout">
        <item name="android:background">@drawable/set_bg_quit_selector</item>
    </style>
</resources>
